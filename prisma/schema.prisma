generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String   @id @default(cuid())
  displayName String
  email       String   @unique
  password    String?
  firebaseUid String?  @unique
  photoUrl    String?  // ✅ harus ada ini
  profile     Profile?
  histories   FoodHistory[]
  points         Int       @default(0)
  lastLoginDate  DateTime?
  dailyPoints    DailyPoint[]   // ✅ relasi balik ke DailyPoint
}


model Profile {
  id       String   @id @default(cuid())
  user     User     @relation(fields: [userId], references: [id])
  userId   String   @unique
  gender   String
  age      Int
  recommendedCalories Int?
  customCalories      Int?
  height   Float
  weight   Float
}

model Food {
  id            String         @id @default(cuid())
  foodType      String
  portionSize   Int
  carbohydrates Float
  protein       Float
  fat           Float
  calories      Int
  histories     FoodHistory[]  // Relasi ke FoodHistory
}



model FoodHistory {
  id       String   @id @default(cuid())
  user     User     @relation(fields: [userId], references: [id])
  userId   String
  food     Food     @relation(fields: [foodId], references: [id])
  foodId   String
  date     DateTime
  grams    Float
}

model DailyPoint {
  id     String   @id @default(cuid())
  user   User     @relation(fields: [userId], references: [id])
  userId String
  type   String   // contoh: "food_log", "login", "calorie_goal"
  date   DateTime
  count  Int      // berapa kali dilakukan dalam 1 hari
}
