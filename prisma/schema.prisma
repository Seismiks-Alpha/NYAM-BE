generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String   @id @default(cuid())
  displayName String
  email       String   @unique
  password    String?
  firebaseUid String?  @unique
  photoUrl    String?  // ✅ harus ada ini
  profile     Profile?
  histories   FoodHistory[]
  points         Int       @default(0)
  lastLoginDate  DateTime?
  dailyPoints    DailyPoint[]   // ✅ relasi balik ke DailyPoint

}


model Profile {
  id       String   @id @default(cuid())
  user     User     @relation(fields: [userId], references: [id])
  userId   String   @unique
  gender   String
  age      Int
  recommendedCalories Int?
  customCalories      Int?
  height   Float
  weight   Float
}





model FoodHistory {
  id            String   @id @default(cuid())
  user          User     @relation(fields: [userId], references: [id])
  userId        String
  date          DateTime
  grams         Float
  foodType      String   // ✅ Nama makanan langsung
  carbohydrates Float
  protein       Float
  fat           Float
  calories      Int
  imageUrl      String?  // ✅ Gambar hasil upload
}



model DailyPoint {
  id     String   @id @default(cuid())
  user   User     @relation(fields: [userId], references: [id])
  userId String
  type   String   // contoh: "food_log", "login", "calorie_goal"
  date   DateTime
  count  Int      // berapa kali dilakukan dalam 1 hari
}
